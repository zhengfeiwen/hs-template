$leftWidth: 120px;
.manage-container{
  height: 100%;
  width: 90%;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.bs-item{
  padding:8px 10px;
  border-radius: 4px;
}

.bs-item:hover {
  background-color: #4285F4;
  color: #fff;
  
} 

.profile {
  width: 36px;
  height: 36px;
  border-radius: 50%;
}

.flex{
  display: flex;
  .left{
    margin-left: -20px;
    width: $leftWidth;
    height: 100%;
  }
  .right{
    width: calc(100% - #{$leftWidth} - 10px);
    height: 100%;
    padding-left: 10px;
  }
}



