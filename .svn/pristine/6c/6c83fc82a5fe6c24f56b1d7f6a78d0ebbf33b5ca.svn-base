}
// 左右布局
.left-block{
  height:calc(100% + 10px);
  width: $searchWidth;
  display: flex;
  flex-direction: column;
  border-right: 2px solid #dedede;
  .tree-block{
    height: 100%;
    overflow: hidden;
  }
}
.right-block{
  height: 100%;
  width: calc(100% - #{$searchWidth} - 10px);
  margin-left: 10px;
}

// 网格风格
.el-form.border-style{
  width: 100%;
  // height: 100%;
  border: 1px solid #d9d9d9;
  display: flex;
  flex-direction: column;
  .el-form-item{
    width: 100%;
    height: 50px;
    min-width: 300px;
    margin: 0 !important;
    border-bottom: 1px solid #d9d9d9;
    display: flex;
    &:last-child {
      border-bottom: none;
    }

    &.double {
      height: 100px;
    }

    &.multi {
      min-height: 220px;
    }

    &.area {
      min-height: 300px;
    }

    &.line {
      width: 100%;
    }

    .el-form-item__label-wrap{
      display: flex;
      align-items: center;
      // background-color: #fcfcfc;
    }

    .el-form-item__content{
      height: 100%;
      width: calc(100% - 98px);
      display: flex;
      justify-content: flex-start;
      align-items: center;
      padding: 0 10px;
      border-left: 1px solid #d9d9d9;
      overflow: auto;

      &::-webkit-scrollbar {
        /*滚动条整体样式*/
        width: 6px;
        /*高宽分别对应横竖滚动条的尺寸*/
        height: 6px;
      }

      &::-webkit-scrollbar-thumb {
        /*滚动条里面小方块*/
        border-radius: 10px;
        -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
        background: #535353;
      }

      &::-webkit-scrollbar-track {
        /*滚动条里面轨道*/
        -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        background: #EDEDED;
      }

      &>div:first-child {
        width: calc(100% - 120px);
      }

      .el-form-item__error{
        width: 110px;
        position: static;
        margin-left: 10px;
      }
    }
  }

  &.colunm {
    flex-direction: row;
    flex-wrap: wrap;

    .el-form-item{
      width: 50%;

      &:nth-child(even) {
        border-left: 1px solid #d9d9d9;
      }

      &.line {
        width: 100%;
      }
    }
  }
}


//网格风格-2
.el-form.border-style2{
  table {
    border: 1px solid #d9d9d9;
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    tr {
      td {
        height: 50px;
        padding: 0;
        width: 50%;
      }
    }
  }

  .el-form-item{
    height: 100%;
    line-height: 100%;
    margin: 0 !important;
  }

  .el-form-item__label-wrap{
    height: 100%;
    line-height: 100%;
    border-right: 1px solid #d9d9d9;
    background-color: #fcfcfc;
  }

  .el-form-item__label{
    height: 100%;
    line-height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .el-form-item__content {
    height: 100%;
    width: calc(100% - 98px);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 10px;
    border-left: 1px solid #d9d9d9;
    overflow: visible;
  }

  .el-form-item__content{
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 10px;
    overflow: visible;
  }

  .el-form-item.photo-block .image-dashed{
    height: calc(100% - 20px);
    width: 160px;
  }

  textarea{
    margin: 10px 0;
  }
  .el-input__count{
    bottom: 15px;
    line-height: 20px;
    height: 20px;
  }
}
