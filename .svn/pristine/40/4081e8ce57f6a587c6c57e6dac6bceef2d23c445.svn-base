.login-container{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: auto;
  display: flex;
  flex-direction: column;
  .background{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  header{
    position: absolute;
    margin: 40px;
    display: flex;
    .el-image{
      font-size: 40px;
      width: 50px;
      height: 50px;
      margin: 8px 16px 0 0;
    }
    span{
      font-size: 40px;
      color: #333;
      font-weight: bold;
    }
  }
  section{
    position: relative;
    height: 490px;
    width: 510px;
    margin: 0 auto;
    margin: auto;
    border-radius: 4px;
    background-color: #fff;
    .el-form{
      .title{
        margin: 60px 0 50px 0;
        font-size: 36px;
        color: #464646;
      }
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      .el-form-item{
        display: flex;
        flex-direction: row;
        width: 360px;
        height: 48px;
        margin-bottom: 26px !important;
        .item{
          width: 360px;
          height: 100%;
          display: flex;
          flex-direction: row;
          align-items: center;
          border: 1px solid #d6d6d6;
          border-radius: 24px;
          i{
            font-size: 20px;
            margin-left: 12px;
            color: #d9d9d9;
            &:after{
              content: '';
              margin-left: 10px;
              margin-right: 2px;
              border-right: 1px solid #d6d6d6;
            }
          }
          .el-input{
            width: calc(100% - 80px);
            border: none;
            background-color: #fff;
            .el-input__inner{
              border: none;
              background-color: #fff !important;
            }
            input{
              box-shadow: inset 0 0 0 1000px #fff !important;
            }
          }
        }
        .code{
          width: calc(360px - 140px);
          float: left;
          margin-right: 20px;
        }
        .img-verify{
          float: right;
          border-radius: 24px;
          canvas{
            height: 48px;
            width: 100%;
            border-radius: 24px;
          }
        }
      }
      .btn-login{
        width: 360px;
        height: 54px;
        border-radius: 24px;
        background-color: #fe4066;
        border-color: #fe4066;
        margin: 10px 0 0;
        span{
          font-size: 26px;
        }
        &:hover{
          opacity: 0.8;
        }
      }
      .check-btn{
        margin-top: 12px;
        margin-left: -300px;
      }
    }
    .browser-block{
      width: 560px;
      height: 32px;
      line-height: 24px;
      font-size: 14px;
      margin-left: -14px;
      margin-top: 24px;
      opacity: 0.7;
      img{
        height: 20px;
        margin-left: 6px;
        vertical-align: bottom;
        display: inline;
        &:last-child{
          margin-right: 6px;
        }
      }
    }
  }
}
