import request from '@/utils/request'
import setting from '@/settings'
import qs from 'qs'
const apiUrl = setting.apiUrl

/**
 * 获取日志详情
 * @param data
 */
export const operateLogDetail = (data: any) =>
  request({
    url: `${apiUrl.api}/core/operateLog/detail`,
    method: 'post',
    data: qs.stringify(data)
  })

/**
* 获取日志列表
* @param data
*/
export const operateLogList = (data: any) =>
  request({
    url: `${apiUrl.api}/core/operateLog/list`,
    method: 'post',
    data: qs.stringify(data)
  })

/**
 * 获取日志总数
 * @param data
 */
export const operateLogCount = (data: any) =>
  request({
    url: `${apiUrl.api}/core/operateLog/count`,
    method: 'post',
    data: qs.stringify(data)
  })
