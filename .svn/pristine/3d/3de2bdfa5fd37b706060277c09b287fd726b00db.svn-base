.flowdetail-container{
    .hs-table .el-table th{
        background-color: rgba(250, 250, 250, 1);
    }
    .flow-li{
        &>span{
            margin-right: 30px;
            .blue{
                color: #4285F4;
                font-weight: bold;
            }
        }
        .status1{
          color: rgb(19, 206, 102);
        }
        .status2{
          color: #EA4335;
        }
    }
}

// 流水明细弹窗样式
.collect-detail-container{
  .header{
    width: 100%;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #e4e4e4;
  }
  .line {
    width: 100%;
    display: flex;
    margin-bottom: 12px;
    margin-left: 24px;
    .hs-icon-user {
      margin-left: -24px;
      font-size: 20px;
      font-weight: bold;
      margin-right: 2px;
    }
    .student-name {
      font-size: 16px;
      color: #212121;
      font-weight: bold;
    }
    &.auto .static-label{
      font-size: 16px;
      font-weight: bold;
    }
  }
  section{
    margin-top: 10px;
  }
  .static-item-container{
    width: 25%;
    .static-label{
      width: auto;
    }
    .static-content{
      font-weight: 400;
    }
  }
  .hs-icon-warning{
    font-size: 21px;
    margin-right: 6px;
    transform: rotate(180deg);
  }
  .auto{
    margin-left: 24px;
    .static-item-container{
      .static-label{
        width: auto;
        font-size: 16px;
      }
      .static-content{
        font-size: 16px;
        font-weight: bold;
        color: $mainRed;
      }
    }
  }
  .dialog-footer{
    text-align: right;
  }
}