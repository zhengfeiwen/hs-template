}
.el-input.is-active .el-input__inner, .el-input__inner:focus {
  border-color: $mainRed;
}
.el-select .el-input__inner:focus {
  border-color: $mainRed;
}
.hs-tabs__active-bar{
  background-color: $mainRed !important;
}
.el-tabs__item{
  &:hover{
