.login-container{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: auto;
  display: flex;
  flex-direction: column;

  .background{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  header{
    position: absolute;
    margin: 40px;
    display: flex;
    .hs-image{
      font-size: 40px;
      width: 50px;
      height: 50px;
      margin: 8px 16px 0 0;
    }
    span{
      font-size: 40px;
      color: #333;
      font-weight: bold;
    }
  }
  section{
    position: relative;
    height: 490px;
    width: 510px;
    margin: 0 auto;
    margin: auto;
    background-color: #fff;
    .hs-form{
      .title{
        margin: 60px 0 50px 0;
        font-size: 36px;
        color: rgb(64, 158, 255);
      }
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      .hs-form-item{
        display: flex;
        flex-direction: row;
        width: 360px;
        height: 48px;
        margin-bottom: 26px !important;
        .item{
          width: 360px;
          height: 100%;
          display: flex;
          flex-direction: row;
          align-items: center;
          border: 1px solid #d6d6d6;
          border-radius: 24px;
          i{
            font-size: 20px;
            margin-left: 12px;
            color: #d9d9d9;
            &:after{
              content: '';
              margin-left: 10px;
              margin-right: 2px;
              border-right: 1px solid #d6d6d6;
            }
          }
          .hs-input{
            width: calc(100% - 80px);
            border: none;
            background-color: #fff;
            .hs-input__inner{
              border: none;
              background-color: #fff !important;
            }
            input{
              box-shadow: inset 0 0 0 1000px #fff !important;
            }
          }
        }
        .code{
          width: calc(360px - 140px);
          float: left;
          margin-right: 20px;
        }
        .img-verify{
          float: right;
          border-radius: 24px;
          canvas{
            height: 48px;
            width: 100%;
            border-radius: 24px;
          }
        }
      }
      .btn-login{
        width: 360px;
        height: 54px;
        border-radius: 24px;
        color: #fff;
        margin: 10px 0 0;
        span{
          font-size: 26px;
        }
      }
      .check-btn{
        margin-top: 12px;
        margin-left: -300px;
      }
    }
  }
  footer{
    position: absolute;
    width: 100%;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    font-size: 16px;
    color: #333;
    bottom: 0;
    span{
      font-size: initial;
    }
    .browser{
      margin-left: 32px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 32px;
      .hs-image{
        height: 32px;
      }
    }
  }
}
