.el-form-item__error{
  padding-top: 0;
  margin-top: -4px;
}
.el-form {
  position: relative;
  &.flex-query-form{
    padding-right: 200px;
  }
  .el-form-item {
    margin-bottom: 12px !important;
    margin-right: 12px !important;
    .el-form-item__label-wrap {
      height: 40px;
      display: flex;
      align-items: center;
      .el-form-item__label {
        width: 98px;
        line-height: normal;
      }
    }
    .el-form-item__content {
      min-width: 198px !important;

      .el-select, .el-cascader {
        min-width: 198px !important;
      }
    }
    &.query-block{
      margin: 0 !important;
      position: absolute;
      text-align: right;
      right: 0;
    }
  }
}
.hidden{
  display: none;
}

.el-table th .cell{
  font-size: 14px;
  color: #999;
}

.el-table td .cell{
  font-size: 14px;
  color: #212121;
}
.el-loading-spinner{
  .el-icon-loading, .el-loading-text{
    color: $mainRed;
  }
}

.el-checkbox__input.is-checked .el-checkbox__inner, .el-checkbox__input.is-indeterminate .el-checkbox__inner {
  background-color: $mainRed !important;
  border-color: $mainRed !important;
}
.el-date-table td.today span, .el-date-table td.available:hover, .el-picker-panel__icon-btn:hover{
  color: $mainRed;
}
.el-pager li.active, .el-pager li:hover{
  color: $mainRed;
}

.hs-link.hs-link--danger:hover, .hs-link.hs-link--danger {
  color: $mainRed;
}

.el-checkbox__inner:hover {
  border-color: $mainRed;
}

.el-checkbox__input.is-checked+.el-checkbox__label {
  color: #333;
}

.export-body{
  display: none;
}


