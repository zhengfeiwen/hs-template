
$mainRed: #FE4066;

* {
  &::-webkit-scrollbar {
    /*滚动条整体样式*/
    width: 6px;
    /*高宽分别对应横竖滚动条的尺寸*/
    height: 6px;
  }

  &::-webkit-scrollbar-thumb {
    /*滚动条里面小方块*/
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    background: #535353;
  }

  &::-webkit-scrollbar-track {
    /*滚动条里面轨道*/
    -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    background: #EDEDED;
  }
}

.f{
  color: #FF0000;
}
.t{
  color: #009688; 
}
.el-tooltip__popper[x-placement^=right] .popper__arrow{
  left: -5px !important;
  &:after{
    left: 0 !important;
  }
}
.el-tooltip__popper[x-placement^=bottom] .popper__arrow{
  left: calc(50% - 3px) !important;
  &:after{
    left: calc(50% - 1px) !important;
  }
}
.el-tooltip__popper[x-placement^=top] .popper__arrow{
  left: calc(50% - 3px) !important;
  &:after{
    left: calc(50% - 1px) !important;
  }
}

.subtitle{
  font-size: 16px;
  height: 32px;
  line-height: 32px;
  font-weight: bold;
  &:before{
    content: '';
    height: 13px;
    width: 4px;
    border-right: 4px solid #FF0000;
    margin-right: 7px;
  }
}

.v-modal{
  z-index: 2000 !important;
}

.hs-dialog__wrapper, .el-dialog__wrapper{
  z-index: 2003 !important;
}

.el-select-dropdown, .el-picker-panel{
  z-index: 2050 !important;
}

.hs-button.is-disabled{
  pointer-events: inherit !important;
  &:hover{
    cursor: not-allowed;
  }
}

.hs-button--danger, .el-button--danger{
  background-color: $mainRed !important;
  border-color: $mainRed !important;
  &:hover{
    opacity: 0.8;
  }
}
.hs-dialog__headerbtn:focus .hs-dialog__close, .hs-dialog__headerbtn:hover .hs-dialog__close {
  color: $mainRed !important;
}
.el-input__inner:hover, .hs-input__inner:hover, .is-active .hs-input__inner, .hs-input__inner:focus {
  border-color: $mainRed !important;
}
.el-range-editor.is-active, .el-range-editor.is-active:hover {
  border-color: $mainRed !important;
}
.el-cascader .el-input .el-input__inner:focus, .el-cascader .el-input.is-focus .el-input__inner {
  border-color: $mainRed !important;
}
.hs-button--info.is-plain, .el-button--info.is-plain{
  background-color: #fff !important;
  border-color: #dedede !important;
  color: #909399 !important;
  &:focus{
    background-color: #fff !important;
    border-color: #dedede !important;
    color: #909399 !important;
  }
  &:hover{
    background-color: #666 !important;
    border-color: #666 !important;
    color: #fff !important;
    opacity: 0.8;
  }
}
.el-radio__input.is-checked .el-radio__inner{
  border-color: $mainRed;
  background: $mainRed;
}
.el-radio__inner:hover{
  border-color: $mainRed;
}
.el-radio__input.is-checked+.el-radio__label{
  color: $mainRed;
}
.hs-button--info, .el-button--info{
  background-color: #666 !important;
  border-color: #666 !important;
  color: #fff;
  &:focus{
    background-color: #666 !important;
    border-color: #666 !important;
    color: #fff;
  }
  &:hover{
    background-color: #666 !important;
    border-color: #666 !important;
    color: #fff;
    opacity: 0.8;
  }
}

.el-tree--highlight-current .el-tree-node.is-current>.el-tree-node__content {
  background-color: $mainRed !important;
  opacity: 0.8;
  color: #fff;
}

